{{#extends 'base'}}

{{#block 'content'}}

<h1>Posters</h1>

<form method="GET">
    {{{form}}}
    <button class="btn btn-primary mb-3 mt-3">Search</button>
</form>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Cost</th>
                <th>Description</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Image</th>
                <th>Date</th>
                <th>Stock</th>
                <th>Height</th>
                <th>Width</th>
                <th></th>
            </tr>
        </thead>
        {{#each posters}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                {{#each this.tags}}
                    <span class="badge bg-primary">
                        {{this.name}}
                    </span>
                {{/each}}
            </td>
            <td>
                {{#if this.image_url}}
                <img src="{{this.image_url}}" class="img-fluid"/>
                {{/if}}
            </td>
            <td>
                {{this.date}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                {{this.height}}
            </td>
            <td>
                {{this.width}}
            </td>
            <td>
                <a href ="/posters/{{this.id}}/update" class="btn btn-primary btn-sm">Edit</a>
                <a href ="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>



        {{/each}}

    </table>
    <a href="/posters/create" class="btn btn-info">Create</a>
</div>

{{/block}}

{{/extends}}
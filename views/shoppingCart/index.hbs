{{#extends 'base'}}

{{#block 'content'}}
<h1>Shopping Cart</h1>
<ul>
    {{!-- returns each instance/row of shoppingCart and its relations --}}
    {{#each shoppingCart}} 
    <li class="list-group-item">
        <h4>{{this.posters.title}}</h4>
        <h5>Category: {{this.posters.category.name}}</h5>
        <h5>Cost: {{this.posters.cost}}</h5>
        <h5>Quantity: {{this.quantity}}</h5>
        <a href="/shoppingCart/{{this.posters.id}}/remove" class="btn btn-danger">Remove item</a>
        <form method="POST" action="/shoppingCart/{{this.posters.id}}/quantity/update">
            <input type="hidden" value="{{../csrfToken}}" name="_csrf"/>
            <h5>
                Quantity:
                <input type="text" name="newQuantity" value={{this.quantity}} style="width:30px" />
                <input type="submit" value="Update Quantity" class="btn btn-success btn-sm" />
            </h5>
        </form>
    </li>
    {{/each}}
</ul>

{{/block}}

{{/extends}}